<interface>
    <object id="window" class="GtkWindow">
        <property name="visible">True</property>
        <property name="title">Login</property>
        <property name="resizable">False</property>
        <property name="default-width">300</property>

        <child>
            <object id="grid" class="GtkGrid">
                <style>
                    <class name='login-grid'></class>
                </style>
                <property name="visible">True</property>
                <property name="row_spacing">10</property>
                <property name="column_spacing">10</property>

                <child>
                    <object class="GtkImage">
                        <style>
                            <class name='login-image'></class>
                        </style>
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="icon-name">system-users</property>
                        <property name="pixel-size">64</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>
                    </packing>
                </child>

                <child>
                    <object id="button1" class="GtkEntry">
                        <style>
                            <class name='input-box'></class>
                        </style>
                        <property name="width_request">300</property>
                        <property name="height_request">40</property>
                        <property name="visible">True</property>
                        <property name="placeholder_text">Username</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">1</property>
                    </packing>
                </child>

                <child>
                    <object id="button2" class="GtkEntry">
                        <style>
                            <class name='input-box'></class>
                        </style>
                        <property name="width_request">300</property>
                        <property name="height_request">40</property>
                        <property name="visible">True</property>
                        <property name="visibility">False</property>
                        <property name="placeholder_text">Password</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">2</property>
                    </packing>
                </child>

                <child>
                    <object id="quit" class="GtkButton">
                        <style>
                            <class name="login-btn"></class>
                        </style>
                        <property name="width_request">300</property>
                        <property name="height_request">40</property>
                        <property name="visible">True</property>
                        <property name="label">LOGIN</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">3</property>
                    </packing>
                </child>

                <child>
                    <object id="registerBtn" class="GtkButton">
                        <style>
                            <class name="register-btn"></class>
                        </style>
                        <property name="visible">True</property>
                        <property name="label">Don't have and account? Register now</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">4</property>
                    </packing>
                </child>

            </object>
            <packing></packing>
        </child>
    </object>
</interface>